{
  "author": "Andrew Udvare <audvare@gmail.com>",
  "cspell": {
    "cache": {
      "useCache": true
    },
    "dictionaryDefinitions": [
      {
        "name": "main",
        "path": ".vscode/dictionary.txt"
      }
    ],
    "enableFileTypes": {
      "*": true
    },
    "enableGlobDot": true,
    "files": ["*"],
    "ignorePaths": [
      "*.1",
      "*.har",
      "*.lock",
      "*.patch",
      ".git/**",
      ".vscode/extensions.json",
      ".yarn/**/*.cjs",
      "Manifest",
      "dist/**",
      "man/**"
    ],
    "language": "en-GB",
    "languageSettings": [
      {
        "dictionaries": ["main"],
        "languageId": "*"
      }
    ],
    "useGitignore": true
  },
  "description": "Personal Gentoo overlay.",
  "devDependencies": {
    "@prettier/plugin-xml": "^3.4.2",
    "cspell": "^9.6.0",
    "markdownlint-cli2": "^0.20.0",
    "prettier": "^3.7.4",
    "prettier-plugin-ini": "^1.3.0",
    "prettier-plugin-sort-json": "^4.1.1",
    "prettier-plugin-toml": "^2.0.6",
    "pyright": "^1.1.408",
    "yarn-audit-fix": "^10.1.1"
  },
  "files": ["LICENSE", "README.md"],
  "homepage": "https://tatsh.github.io/tatsh-overlay/",
  "keywords": ["gentoo", "overlay"],
  "license": "MIT",
  "markdownlint-cli2": {
    "config": {
      "MD033": {
        "allowed_elements": ["kbd"]
      },
      "default": true,
      "line-length": {
        "code_blocks": false,
        "line_length": 100,
        "tables": false
      }
    }
  },
  "name": "tatsh-overlay",
  "packageManager": "yarn@4.12.0",
  "prettier": {
    "endOfLine": "lf",
    "iniSpaceAroundEquals": true,
    "jsonRecursiveSort": true,
    "overrides": [
      {
        "files": ["package.json"],
        "options": {
          "parser": "json"
        }
      },
      {
        "files": ["*.xml"],
        "options": {
          "useTabs": true
        }
      }
    ],
    "plugins": [
      "@prettier/plugin-xml",
      "prettier-plugin-ini",
      "prettier-plugin-sort-json",
      "prettier-plugin-toml"
    ],
    "printWidth": 100,
    "reorderKeys": true,
    "singleQuote": true
  },
  "repository": "git@github.com:Tatsh/tatsh-overlay.git",
  "scripts": {
    "check-formatting": "yarn prettier -c . && poetry run yapf -prd scripts && yarn markdownlint-cli2 '**/*.md' '#node_modules'",
    "check-spelling": "yarn cspell --no-progress './**/*'  './**/.*'",
    "format": "prettier -w . && poetry run yapf -ri scripts && yarn markdownlint-cli2 --fix '**/*.md' '#node_modules'",
    "mypy": "poetry run mypy",
    "qa": "yarn shellcheck && yarn mypy scripts && yarn ruff scripts && yarn check-spelling && yarn check-formatting",
    "ruff": "poetry run ruff check",
    "shellcheck": "shellcheck scripts/*.sh eclass/*.eclass ./*/*/*.ebuild net-dns/pihole-ftl/files/pihole-FTL x11-misc/mimeo/files/mimeo-completion.sh"
  },
  "version": "0.0.0"
}
