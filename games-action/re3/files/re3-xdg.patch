+			int ret = mkdir(homeDir, 0755);
+			assert(ret == 0);
+		}
+		strcat(homeDir, "/share");
+		if (stat(homeDir, &buf) < 0) {
+			int ret = mkdir(homeDir, 0755);
+			assert(ret == 0);
+		}
+		strcat(homeDir, "/re3");
+		if (stat(homeDir, &buf) < 0) {
+			int ret = mkdir(homeDir, 0755);
+			assert(ret == 0);
+		}
+	}
+	strcpy(ms_rootDirName, homeDir);
+#else
 	_getcwd(ms_rootDirName, 128);
+#endif
