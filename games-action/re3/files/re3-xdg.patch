+	if (strlen(homeDir) > 0) {
+		strcat(homeDir, "/re3");
+		if (stat(homeDir, &buf) < 0) {
+			int ret = mkdir(homeDir, 0755);
+			assert(ret == 0);
+		}
+	} else {
+		memset(homeDir, 0, 255);
+		GetHomeDirectory(homeDir);
+		// Build up ${HOME}/.local/share/re3
+		strcat(homeDir, "/.local");
